<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>


    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- <material name="silver">
        <color rgba="192 192 192 1"/>
    </material> -->


    <!-- BASE LINK -->
    
    <link name="base_link">
    </link>

    <!-- BASE FOOTRPRINT LINK-->

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0.0 0.0 0.0"/>
    </joint>

    <link name="base_footprint">
    </link>

    <!-- Chassis Link -->
    <link name="chassis">
        <visual>
            <origin xyz=" 0 0 0.15" rpy="0 0 0" />
            <geometry>
                <box size="0.554 0.500 0.1"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz=" 0 0 0.15"/>
            <geometry>
                <box size="0.554 0.500 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="10" x="0.554" y="0.500" z="0.1">
                <origin xyz=" 0 0 0.15" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>   

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0.0 0.0 0.0"/>
    </joint>

    <!-- All Wheel Links and Joints -->

    <xacro:macro name="wheel" params="name x y z">
        <joint name="${name}_wheel_joint" type="continuous">
            <origin xyz="${x} ${y} ${z}" rpy="-${pi/2} 0.0 0.0"/>
            <parent link="chassis"/>
            <child link="${name}_wheel"/>
            <limit effort="1000.0" velocity="5.0"/>
            <axis xyz="0 0 1"/>
        </joint>

        <link name="${name}_wheel">
            <visual name="">
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.1" length="0.04"/>
                </geometry>
                <material name="orange">
                    <color rgba="1.0 1.0 0.0 1.0"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.1" length="0.04"/>
                </geometry>
            </collision>
            <xacro:inertial_cylinder mass="1" length="0.04" radius="0.1">
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            </xacro:inertial_cylinder>
        </link>
    </xacro:macro>

    <!-- Wheel Creating using macros -->
    <xacro:wheel name="front_left"  x="0.201" y ="0.295" z="0.1"/>
    <xacro:wheel name="rear_left" x="-0.201" y ="0.295" z="0.1"/>
    <xacro:wheel name="front_right"  x="0.201" y ="-0.295" z="0.1"/>
    <xacro:wheel name="rear_right"   x="-0.201" y ="-0.295" z="0.1"/>


</robot>
